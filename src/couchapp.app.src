{application, couchapp,
 [{description, "Couchapp: Couchdb Application Tool"},
  {vsn, "0.8.0"},
  {modules, []},
  {registered, []},
  {applications, [kernel, stdlib]},
  {included_applications, [crypto, sasl, ibrowse, couchbeam]},
  {env, [
    %% default log level
    {log_level, error},

    %% list of commands modules
    {modules, [
        couchapp_init,
        couchapp_generate,
        couchapp_push,
        couchapp_clone,
        couchapp_pull]}
  ]}]}.
